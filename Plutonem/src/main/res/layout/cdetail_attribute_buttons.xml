<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:paddingStart="@dimen/keyline_5"
    android:paddingEnd="@dimen/keyline_5"
    android:paddingTop="@dimen/keyline_5"
    android:paddingBottom="@dimen/keyline_5">

    <TextView
        android:id="@+id/plutonem_fragment_cdetail_shop_textview_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/size"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/plutonem_fragment_cdetail_shop_materialbutton_size_l"
        style="?materialButtonOutlinedStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/component_label_horizontal_margin"
        android:layout_marginEnd="@dimen/keyline_2"
        android:layout_marginRight="@dimen/keyline_2"
        android:text="@string/size_l"

        app:layout_constraintEnd_toStartOf="@+id/plutonem_fragment_cdetail_shop_materialbutton_size_m"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/plutonem_fragment_cdetail_shop_textview_size" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/plutonem_fragment_cdetail_shop_materialbutton_size_m"
        style="?materialButtonOutlinedStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/keyline_2"
        android:layout_marginEnd="@dimen/keyline_2"
        android:text="@string/size_m"

        app:layout_constraintBottom_toBottomOf="@+id/plutonem_fragment_cdetail_shop_materialbutton_size_l"
        app:layout_constraintEnd_toStartOf="@+id/plutonem_fragment_cdetail_shop_materialbutton_size_s"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/plutonem_fragment_cdetail_shop_materialbutton_size_l"
        app:layout_constraintTop_toTopOf="@+id/plutonem_fragment_cdetail_shop_materialbutton_size_l" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/plutonem_fragment_cdetail_shop_materialbutton_size_s"
        style="?materialButtonOutlinedStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/keyline_2"
        android:layout_marginLeft="@dimen/keyline_2"
        android:text="@string/size_s"

        app:layout_constraintBottom_toBottomOf="@+id/plutonem_fragment_cdetail_shop_materialbutton_size_m"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/plutonem_fragment_cdetail_shop_materialbutton_size_m"
        app:layout_constraintTop_toTopOf="@+id/plutonem_fragment_cdetail_shop_materialbutton_size_m" />

</androidx.constraintlayout.widget.ConstraintLayout>